extends layout

block content

  h1 #{title}: #{book.name}
  p= book.lifespan

  if book_bookinstances.length

    p #[strong Delete the following booksinstances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Bookinstance
      dl
        each bookinstance in book_bookinstances
          dt
            a(href=bookinstance.url) #{book.title}
          dd #{bookinstance.imprint}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
